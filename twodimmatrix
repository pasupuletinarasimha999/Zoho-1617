# Zoho-1617
#include<stdio.h>
int main()
{
	int a[4][4]={0};
	int m,n,k,i,j;
	printf("enter the m *n \n");
	scanf("%d %d",&m,&n);
	printf("enter the k value \n");
	scanf("%d",&k);
	for(i=0;i<m;i++)
	{
		for(j=0;j<n;j++)
		{
			if(i+j==k)
			{
				a[i][j]=1;
			}
			
		}
	}
	printf("the matrix obtained is \n");
		for(i=0;i<m;i++)
	{
		for(j=0;j<n;j++)
		{
			printf("%d \t",a[i][j]);
		}
		printf("\n");
	}
}
